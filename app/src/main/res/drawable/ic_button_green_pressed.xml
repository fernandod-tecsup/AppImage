<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- "background shadow" -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#00000000" />
        </shape>
    </item>
    <!-- background color -->
    <item
        android:bottom="3px"
        android:left="3px"
        android:right="3px"
        android:top="3px">
        <shape
            android:shape="rectangle">
            <corners android:radius="15dp" />
            <stroke android:color="#B7000000"
                android:width="0dp" />
            <solid
                android:color="#007A14"/>
        </shape>
    </item>
    <!-- over left shadow -->

</layer-list>