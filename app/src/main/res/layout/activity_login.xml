<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#75191e">
    <ImageView
        android:id="@+id/deli_img"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/iconologin"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_login" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/gold"
        android:fontFamily="@font/bebasneue_regular"
        android:textSize="36dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/deli_img"
        app:layout_constraintBottom_toTopOf="@+id/email_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/email_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_account_circle_24"
        android:hint="*Email"
        android:textColorHint="@color/white"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/bebasneue_regular"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/txt_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center" />
    <EditText
        android:id="@+id/pass_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="*Password"
        android:paddingLeft="15dp"
        android:paddingRight="30dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:inputType="textPassword"
        android:gravity="center"
        android:fontFamily="@font/bebasneue_regular"
        android:drawableLeft="@drawable/ic_baseline_lock_open_24"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_txt" />
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/pass_txt"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:fontFamily="@font/bebasneue_regular"
        android:layout_centerVertical="true"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:paddingBottom="5dp"
        android:background="@drawable/btn_green"
        android:text="Ingresar"
        app:layout_constraintTop_toBottomOf="@+id/pass_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bebasneue_regular"
        android:text="RegÃ­strate"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_o"
        app:layout_constraintStart_toStartOf="@+id/btn_login"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />


</androidx.constraintlayout.widget.ConstraintLayout>